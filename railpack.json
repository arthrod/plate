{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "yarn install && NODE_OPTIONS='--max-old-space-size=8192' yarn build && cd apps/plate-editor && NODE_OPTIONS='--max-old-space-size=8192' yarn build",
    "buildEnvironment": "V3"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "cd apps/plate-editor && bun dist/server/index.js",
    "healthcheckPath": "/api/health",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
