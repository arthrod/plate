{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "yarn build:apps && cp -r apps/www/public apps/www/.next/standalone/apps/www/public && cp -r apps/www/.next/static apps/www/.next/standalone/apps/www/.next/static",
    "buildEnvironment": "V3"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "NODE_OPTIONS='--max-old-space-size=8192' node apps/www/.next/standalone/apps/www/server.js",
    "sleepApplication": false,
    "useLegacyStacker": false,
    "ipv6EgressEnabled": false,
    "multiRegionConfig": {
      "us-east4-eqdc4a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
